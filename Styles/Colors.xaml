<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

    <SolidColorBrush x:Key="Color.ToggleButton.Enabled.Background" Color="#8FBC8F" options:Freeze="True" />
    <SolidColorBrush x:Key="Color.ToggleButton.Checked.Background" Color="#DB7093" options:Freeze="True" />
    <SolidColorBrush x:Key="Color.Button.Highlight.Background" Color="#A1AFC9" options:Freeze="True" />

    <SolidColorBrush x:Key="Color.Error.Foreground" Color="#FFCC2618" options:Freeze="True" />
    <SolidColorBrush x:Key="Color.Info.Foreground" Color="#FF1D5B8C" options:Freeze="True" />

</ResourceDictionary>